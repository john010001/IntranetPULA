                                totalTransacc = Model.Venta_TKT.Sum(s => s.Transacciones);
                                totalCanalRevenue = 0;
                                totalCanalcupones = 0;
                                totalCanalTransacc = 0;
                                porcRevenue = 0;
                                porcTax = 0;

                            }


