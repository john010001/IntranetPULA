                                            <td class="text-right"></td>
                                            <td class="text-right"></td>
                                        }

                                    }

                                    @{
                                        totalCanalRevenue = Model.Venta_TKT.Where(w => w.Canal == itemVenta.Canal).Sum(s => s.Revenue_YQ);
                                        totalCanalcupones = Model.Venta_TKT.Where(w => w.Canal == itemVenta.Canal).Sum(s => s.Cupones);


                                        try
                                        {
                                            tarifaMedia = totalCanalRevenue / (decimal)totalCanalcupones;
                                        }
                                        catch (Exception)
                                        {

