                                        if (detalleDia != null)
                                        {
                                            <td class="text-right">@detalleDia.Revenue_YQ.ToString("N2", CultureInfo.CurrentCulture)</td>
                                            <td class="text-right">@detalleDia.Cupones.ToString("N0", CultureInfo.CurrentCulture)</td>
                                        }
                                        else
