@model IEnumerable<Intranet.Models.Data.MENU>

@{
    ViewBag.Title = "Menú";
    Layout = "~/Views/Shared/LayoutAside.cshtml";
}



@* <!-- Page Style --> *@
@section style {
    <!-- Data Table 1.10.22 -->
    <link rel="stylesheet" href="~/content/plugins/datatable/datatables.min.css">

    <style>
        .table-listado tbody tr th a {
            font-size: 14px;
            font-weight: 400;
            text-decoration: underline;
        }

            .table-listado tbody tr th a:hover {
                color: #FF7800;
            }

        .table-listado tbody tr td a i {
            font-size: 16px;
        }

            .table-listado tbody tr td a i.fa-edit {
                color: #00cd00;
            }

            .table-listado tbody tr td a i.fa-minus-circle {
                color: #FF0000;
            }

            .table-listado tbody tr td a i:hover {
                color: #FF7800;
            }
    </style>
}

<div class="container-fluid py-4">
    <h1 class="admin-big-title">Menú</h1>
    <span class="gn-orange-line mb-4"></span>

    <div class="row">
        <div class="col col-12 col-md-6 col-lg-3">
            <div class="mb-4">
                <a href='@Url.Action("Create", "Menu")' class="gn-btn-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="gn-btn-text">Nuevo</div>
                        <i class="fal fa-plus-circle"></i>
                    </div>
                </a>

            </div>
        </div>
        <div class="col col-12 mb-4">
            <div class="card admin-card">
                <div class="card-header">Busqueda</div>
                <div class="p-3">
                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@

                        <div class="row">
                            <div class="col col-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="input1">Descripción:</label>
                                    <input type="text" name="Descripcion" id="Descripcion" class="form-control validate" value="@ViewBag.Descripcion">
                                </div>
                            </div>
                            <div class="col col-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="nacionalidad">Nivel:</label>
                                    @Html.DropDownList("Niveles", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col col-12 col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label for="nacionalidad">Menú padre:</label>
                                    @Html.DropDownList("MenuPadre", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col col-12">
                                <div class="text-center text-md-left d-md-flex mt-3 pb-2">
                                    <div class="mb-3 mb-md-0 mr-md-4">
                                        <button class="gn-btn-line-orange" id="Limpia" name="Boton" value="Limpia">Limpiar</button>
                                    </div>
                                    <div>
                                        <button class="gn-btn-orange" id="Buscar" name="Boton" value="Buscar">Buscar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col col-12 mb-4">
            <div class="card admin-card">

                <div>
                    <div class="p-3 datatable-box">
                        <table class="table table-bordered table-lg-responsive table-hover table-striped datatable display table-listado" id="tb_listado">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nivel)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Url)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Principal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Imagen)
                                    </th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @*<a href='@Url.Action("Details", "Menu", new { id = item.Id_Menu })'>*@@Html.DisplayFor(modelItem => item.Descripcion)@*</a>*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nivel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Url)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Principal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Imagen)
                                        </td>
                                        <td>
                                            <a href='@Url.Action("Edit", "Menu", new { id = item.Id })'>
                                                <i class='far fa-edit'></i>
                                            </a>
                                            <a href='@Url.Action("Delete", "Menu", new { id = item.Id })'>
                                                <i class='far fa-minus-circle'></i>
                                            </a>
                                            <a href='@Url.Action("details", "Menu", new { id = item.Id })'>
                                                <i class='far fa-key'></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@*<!-- Page Script -->*@
@section script {

    <!-- Data Table 1.10.22 -->
    <script src="~/content/plugins/datatable/datatables.min.js"></script>

    <script>
        // Sidenav active link
        document.addEventListener('DOMContentLoaded', function () {
            sidenavLink("7.2");
        });

        // Data Table
        $("#tb_listado").dataTable(
            {
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": '<i class="far fa-angle-right"></i>',
                        "previous": '<i class="far fa-angle-left"></i>'
                    }
                }
            }
        );
    </script>
}








