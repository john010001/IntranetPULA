@model  Intranet.Models.Data.MENU

@{
    ViewBag.Title = "Crear Menú";
    Layout = "~/Views/Shared/LayoutAside.cshtml";
    List<SelectListItem> ListarMenuPadre = (List<SelectListItem>)ViewBag.principal_menu;

    List<SelectListItem> ListaNiveles = (List<SelectListItem>)ViewBag.nivel_menu ;
}

@* <!-- Page Style --> *@
@section style {
    <style>
        /**/
    </style>
}

<div class="container-fluid py-4">
    <h1 class="admin-big-title">NUEVO</h1>
    <span class="gn-orange-line mb-4"></span>

    <div class="row">
        <div class="col col-12">
            <div class="card admin-card">
                <div class="p-3">
                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                Menu Padre
                                @*@Html.LabelFor(model => model.ListarMenuPadre, htmlAttributes: new { @class = "" })*@
                                @Html.DropDownList("Descripcion",ListarMenuPadre, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.ListarMenuPadre, "", new { @class = "text-danger" })*@

                            </div>

                            <div class="form-group">
                                Nivel
                                @*@Html.LabelFor(model => model.Nivel, htmlAttributes: new { @class = "" })*@
                                @Html.DropDownList("Nivel",ListaNiveles, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })*@
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Principal, htmlAttributes: new { @class = "" })
                                @Html.ValidationMessageFor(model => model.Principal, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Principal, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.Imagen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="pt-3">
                                    <button type="submit" class="gn-btn-orange">CREAR</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="p-3 pt-0">
                    @Html.ActionLink("←Regresar", "Index")
                </div>
            </div>
        </div>
    </div>
</div>