@model IEnumerable<Intranet.Models.Data.META_VENTA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAside.cshtml";
}

@* <!-- Page Style --> *@
@section style {
    <!-- Data Table 1.10.22 -->
    <link rel="stylesheet" href="~/content/plugins/datatable/datatables.min.css">

    <style>
        .table-listado tbody tr th a {
            font-size: 14px;
            font-weight: 400;
            text-decoration: underline;
        }

            .table-listado tbody tr th a:hover {
                color: #FF7800;
            }

        .table-listado tbody tr td a i {
            font-size: 16px;
        }

            .table-listado tbody tr td a i.fa-edit {
                color: #00cd00;
            }

            .table-listado tbody tr td a i.fa-minus-circle {
                color: #FF0000;
            }

            .table-listado tbody tr td a i:hover {
                color: #FF7800;
            }
    </style>
}


<div class="container-fluid py-4">
    <h1 class="admin-big-title">META DE VENTA</h1>
    <span class="gn-orange-line mb-4"></span>

    <div class="row">

        <div class="col col-12 col-md-6 col-lg-3">
            <div class="mb-4">
                <a href='@Url.Action("Create", "MetaVenta")' class="gn-btn-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="gn-btn-text">Nuevo</div>
                        <i class="fal fa-plus-circle"></i>
                    </div>
                </a>

            </div>
        </div>


        <div class="col col-12 mb-4">


            <div class="row">

                <div class="col col-12 mb-3">
                    <div>
                        @using (Html.BeginForm())
                        {

                            <div class="d-md-flex totalyearmounth">
                                <div class="form-group d-sm-inline-block mr-sm-3">
                                    <label for="ResumeByYear">Año:</label>

                                    @Html.DropDownList("Year", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="form-group d-sm-inline-block mr-sm-3">
                                    <label for="ResumeByMonth"> Mes:</label>
                                    @Html.DropDownList("Month", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div class="form-group d-sm-inline-block">
                                    <div class="h-100 d-flex align-items-end text-center">
                                        <button class="gn-btn-line-orange btn-icon mx-auto">Buscar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card admin-card">
                <div>
                    <div class="p-3 datatable-box">
                        <table class="table table-bordered table-lg-responsive table-hover table-striped datatable display table-listado" id="tb_listado">
                            <thead>
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.mes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.anio)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.TIPOEMISOR.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.mes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.anio)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TIPOEMISOR.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Monto)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.IdMetaVenta }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.IdMetaVenta }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.IdMetaVenta })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>



   


    
</div>





@section script {

    <!-- Data Table 1.10.22 -->
    <script src="~/content/plugins/datatable/datatables.min.js"></script>

    <script>
        // Sidenav active link
        document.addEventListener('DOMContentLoaded', function() {
            sidenavLink("7.2");
        });

        // Data Table
        $("#tb_listado").dataTable(
            {
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": '<i class="far fa-angle-right"></i>',
                        "previous": '<i class="far fa-angle-left"></i>'
                    }
                }
            }
        );
    </script>
}

